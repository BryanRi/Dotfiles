### Quickly change directories
nnoremap .ru :cd /mnt/usb1/ru
nnoremap .c :cd $XDG_CONFIG_HOME
nnoremap .b :cd $MY_BIN_DIR
nnoremap .d :cd $MY_DESKTOP_DIR
nnoremap .D :cd $MY_DOWNLOADS_DIR
nnoremap .p :cd $MY_PICTURES_DIR
nnoremap .ss :cd $HOME/.local/suckless/st
nnoremap .sd :cd $HOME/.local/suckless/dwm
nnoremap .sb :cd $HOME/.local/suckless/dwmblocks

### Edit config files
nnoremap ,b :vim $HOME/.config/bash/bashrc
nnoremap ,ba :vim $HOME/.config/bash/bash_aliases
nnoremap ,awm :vim $HOME/.config/awesome/rc.lua
nnoremap ,v :vim $HOME/.config/vim/vimrc
nnoremap ,f :vim $HOME/.config/fish/config.fish
nnoremap ,fa :vim $HOME/.config/fish/fish_aliases
nnoremap ,fb :vim $HOME/.config/fish/fish_abbreviations
nnoremap ,fv :vim $HOME/.config/fish/fish_variables
nnoremap ,ss :vim $HOME/.local/suckless/st/config.def.h
nnoremap ,sd :vim $HOME/.local/suckless/dwm/config.def.h
nnoremap ,sb :vim $HOME/.local/suckless/dwmblocks/config.def.h

