### webgoat
abbr -a webgoat 'java -jar ~/Downloads/webgoat-server-8.2.2.jar'

### Quickly change directories
abbr -a .. 'cd ..'
abbr -a ... 'cd ../..'
abbr -a .ru 'cd $MY_MAIN_USB/ru/'
abbr -a .c 'cd $XDG_CONFIG_HOME/'
abbr -a .b 'cd $MY_BIN_DIR/'
abbr -a .d 'cd $MY_DESKTOP_DIR/'
abbr -a .D 'cd $MY_DOWNLOADS_DIR/'
abbr -a .p 'cd $MY_PICTURES_DIR/'
abbr -a .ss 'cd $HOME/.local/suckless/st/'
abbr -a .sd 'cd $HOME/.local/suckless/dwm/'
abbr -a .sb 'cd $HOME/.local/suckless/dwmblocks/'

### Edit config files
abbr -a ,b 'vim $XDG_CONFIG_HOME/bash/bashrc'
abbr -a ,ba 'vim $XDG_CONFIG_HOME/bash/bash_aliases'
abbr -a ,awm 'vim $XDG_CONFIG_HOME/awesome/rc.lua'
abbr -a ,v 'vim $XDG_CONFIG_HOME/nvim/init.vim'
abbr -a ,f 'vim $XDG_CONFIG_HOME/fish/config.fish'
abbr -a ,fa 'vim $XDG_CONFIG_HOME/fish/fish_aliases'
abbr -a ,fb 'vim $XDG_CONFIG_HOME/fish/fish_abbreviations'
abbr -a ,fv 'vim $XDG_CONFIG_HOME/fish/fish_variables'
abbr -a ,ss 'vim $HOME/.local/suckless/st/config.def.h'
abbr -a ,sd 'vim $HOME/.local/suckless/dwm/config.def.h'
abbr -a ,sb 'vim $HOME/.local/suckless/dwmblocks/config.def.h'
abbr -a ,. 'vim $HOME/.profile'

### Priviledge elevation
abbr -a d 'doas'
abbr -a n 'nvim'

### system
abbr -a ssn 'doas poweroff'
abbr -a reboot 'doas reboot'
abbr -a wifioff 'nmcli radio wifi off'
abbr -a wifion 'nmcli radio wifi on'

### mount usb, writable by non-root users
#alias mounto sudo mount -o gid=users,fmask=113,dmask=002
abbr -a mtu 'doas mount -o uid=1000,fmask=113,dmask=002 /dev/sda'
abbr -a mtt 'doas umount /dev/sda'

